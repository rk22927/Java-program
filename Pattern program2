public class ex {
    public static void main(String[] args) {
        int i,j,k;
        
        for(i=0;i<4;i++){
            j=0;
            while(j<i){
                System.out.print(" ");
                j++;
            }
            
            for(k=0;k<=i;++k){
                System.out.print(i+1);
           
        }
            System.out.println();
            
        }
    }
    
}
