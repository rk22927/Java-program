public class Pattern1 {
    public static void main(String[] args) {
        int i=4,j,k,l;
        while(0<i){
            j=0;
            while(j<i){
                l=4-j;
                System.out.print(l);
            j++;
                
        }
        System.out.println();
        i--;
    }
    }
    
}
